import schedule
import time
import requests
from datetime import datetime

# ‚ö° Add your own data
TELEGRAM_BOT_TOKEN = "your_telegram_bot_token"
CHAT_ID = "your_chat_id"

def send_weekly_summary():
    # Here you can build your weekly summary
    summary = f"üìä Weekly Summary ({datetime.now().strftime('%Y-%m-%d')}):\n\n" \
              "- Research on open-source AI\n" \
              "- Notes about tokenomics\n" \
              "- Key highlights of the week"

    # Send to Telegram
    url = f"https://api.telegram.org/bot{TELEGRAM_BOT_TOKEN}/sendMessage"
    requests.post(url, data={"chat_id": CHAT_ID, "text": summary})

# Schedule (every Sunday at 18:00)
schedule.every().sunday.at("18:00").do(send_weekly_summary)

print("‚è≥ Weekly summary bot started...")
while True:
    schedule.run_pending()
    time.sleep(60)
